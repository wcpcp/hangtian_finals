<!-- 需求：设置机器人底盘，并添加摄像头 -->

<robot name="mycar">
    <!-- 1.底盘link -->
    <link name="base_link">
        <visual>    <!-- 描述外观 -->
            <geometry>  <!-- 设置连杆的形状 -->
                <box size="0.3 0.2 0.1" />
            </geometry>

            <origin xyz="0 0 0" rpy="0 0 0" />  <!-- 设置偏移量与倾斜弧度 -->

            <material name="car_color">  <!-- 设置材料属性(颜色) -->
                <color rgba="0.8 0.5 0 0.5" />
            </material>
        </visual>
    </link>

    <!-- 2.摄像头link -->
    <link name="camera">
        <visual>    <!-- 描述外观 -->
            <geometry>  <!-- 设置连杆的形状 -->
                <box size="0.02 0.05 0.05" />
            </geometry>
            <!-- 先使用默认（后期修改） -->
            <origin xyz="0 0 0.025" rpy="0 0 0" />  <!-- 设置偏移量与倾斜弧度 -->

            <material name="camara_color">  <!-- 设置材料属性(颜色) -->
                <color rgba="0 0 1 0.5" />
            </material>
        </visual>
    </link>    

    <!-- 3.关节link -->
    <joint name="camera2base" type="continuous"> <!-- continuous: 旋转关节，可以绕单轴无限旋转 -->
        <parent link="base_link"/>  <!-- 父级link -->
        <child link="camera" />     <!-- 子级link -->
        <!-- 需要计算两个 link 的物理中心之间的偏移量 -->
        <origin xyz="0.12 0 0.05" rpy="0 0 0" />
        <axis xyz="0 0 1" />    <!-- 设置关节旋转参考的坐标轴（围绕z轴旋转） -->
    </joint>
</robot>
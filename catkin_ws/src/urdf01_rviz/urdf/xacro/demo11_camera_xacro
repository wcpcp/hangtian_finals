<robot name="qingzhou_car" xmlns:xacro="http://wiki.ros.org/xacro">
    <xacro:property name="PI" value="3.1415926535897932384"/>
    <xacro:property name="camera_length" value="0.01"/>
    <xacro:property name="camera_width" value="0.01"/><!-- 宽度（y） -->
    <xacro:property name="camera_height" value="0.01"/><!-- 高度（z） -->
    <xacro:property name="joint_camera_x" value="0.25"/>
    <xacro:property name="joint_camera_y" value="0"/>
    <xacro:property name="joint_camera_z" value="0.11"/>
    
    <!-- 2.设计连杆和关节 -->
   <link name="camera_link">
      <visual>
        <geometry>
            <box size="${camera_length} ${camera_width} ${camera_height}" />
        </geometry>
        <material name="black"/><!-- demo05中宏定义过 -->
      </visual>
    </link>
    <joint name="camera2base" type="fixed">
        <parent link="base_link" />
        <child link="camera_link" />
        <origin xyz="${joint_camera_x} ${joint_camera_y} ${joint_camera_z}" rpy="0 0 ${PI / 2}" />
    </joint>
    
</robot>